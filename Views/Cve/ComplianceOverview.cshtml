@model CveWebApp.Models.ComplianceViewModel

@{
    ViewData["Title"] = "CVE Compliance Overview";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>CVE Compliance Overview</h1>
    <div>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="ExportCompliance" asp-route-id="@Model.CveDetails.Id" class="btn btn-success me-2">
                <i class="bi bi-download"></i> Export PDF
            </a>
            <a asp-action="ExportComplianceCsv" asp-route-id="@Model.CveDetails.Id" class="btn btn-info me-2">
                <i class="bi bi-file-earmark-spreadsheet"></i> Export CSV
            </a>
        }
        <a asp-action="Details" asp-route-id="@Model.CveDetails.Id" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to CVE Details
        </a>
    </div>
</div>

<!-- CVE Information Card -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">CVE Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>CVE Number:</strong> 
                    @if (!string.IsNullOrEmpty(Model.CveDetails.Details))
                    {
                        <span class="badge bg-primary">@Model.CveDetails.Details</span>
                    }
                    else
                    {
                        <span class="text-muted">Not specified</span>
                    }
                </p>
                <p><strong>Product Family:</strong> @Model.CveDetails.ProductFamily</p>
                <p><strong>Product:</strong> @Model.CveDetails.Product</p>
                <p><strong>Article:</strong> @Model.CveDetails.Article</p>
            </div>
            <div class="col-md-6">
                <p><strong>Max Severity:</strong> @Model.CveDetails.MaxSeverity</p>
                <p><strong>Release Date:</strong> @Model.CveDetails.ReleaseDate?.ToString("yyyy-MM-dd")</p>
                <p><strong>Required KBs:</strong> 
                    @if (Model.RequiredKbs.Any())
                    {
                        <span class="badge bg-info me-1">@string.Join("</span> <span class=\"badge bg-info me-1\">", Model.RequiredKbs)</span>
                    }
                    else
                    {
                        <span class="text-muted">None identified</span>
                    }
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Compliance Summary Card -->
<div class="row mb-4">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Compliance Summary</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-primary">@Model.Summary.TotalServers</h4>
                            <p class="text-muted mb-0">Total Servers</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-success">@Model.Summary.CompliantServers</h4>
                            <p class="text-muted mb-0">@(Model.RequiredKbs.Count == 0 ? "Not Applicable" : "Compliant")</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-danger">@Model.Summary.NonCompliantServers</h4>
                            <p class="text-muted mb-0">Non-Compliant</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <h4 class="@(Model.Summary.CompliancePercentage >= 80 ? "text-success" : Model.Summary.CompliancePercentage >= 50 ? "text-warning" : "text-danger")">
                            @Model.Summary.CompliancePercentage.ToString("F1")%
                        </h4>
                        <p class="text-muted mb-0">Compliance Rate</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Server Compliance Details -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Server Compliance Details</h5>
    </div>
    <div class="card-body">
        @if (Model.ServerStatuses.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Computer Name</th>
                            <th>OS Product</th>
                            <th>Status</th>
                            <th>Installed KBs</th>
                            <th>Missing KBs</th>
                            <th>Supersedence Info</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var server in Model.ServerStatuses)
                        {
                            <tr class="@(server.IsCompliant ? (Model.RequiredKbs.Count == 0 ? "table-light" : "table-success") : "table-warning")">
                                <td>
                                    <strong>@server.Computer</strong>
                                </td>
                                <td>@server.OSProduct</td>
                                <td>
                                    @if (server.IsCompliant)
                                    {
                                        @if (Model.RequiredKbs.Count == 0)
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-dash-circle"></i> Not Applicable
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Compliant
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-exclamation-triangle"></i> Non-Compliant
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (server.InstalledKbs.Any())
                                    {
                                        @foreach (var kb in server.InstalledKbs.Take(3))
                                        {
                                            <span class="badge bg-secondary me-1">@kb</span>
                                        }
                                        @if (server.InstalledKbs.Count > 3)
                                        {
                                            <span class="text-muted">+@(server.InstalledKbs.Count - 3) more</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">None</span>
                                    }
                                </td>
                                <td>
                                    @if (server.MissingKbs.Any())
                                    {
                                        @foreach (var kb in server.MissingKbs)
                                        {
                                            <span class="badge bg-danger me-1">@kb</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-success">None</span>
                                    }
                                </td>
                                <td>
                                    @if (server.SupersedenceNotes.Any())
                                    {
                                        @foreach (var note in server.SupersedenceNotes)
                                        {
                                            <div class="small text-dark mb-1">
                                                <i class="bi bi-info-circle"></i> @note
                                            </div>
                                        }
                                    }
                                    else if (server.IsCompliant && Model.RequiredKbs.Any())
                                    {
                                        <span class="text-muted small">Direct KB match</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <p class="text-muted">
                    @if (Model.RequiredKbs.Any())
                    {
                        <span>No servers found matching the CVE product criteria.</span>
                    }
                    else
                    {
                        <span>No KB requirements identified for this CVE.</span>
                    }
                </p>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to CVE List</a>
</div>