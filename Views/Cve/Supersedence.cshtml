@model List<CveWebApp.Models.KbSupersedence>
@{
    ViewData["Title"] = "KB Supersedence";
}

<div class="row">
    <div class="col-md-12">
        <h2>KB Supersedence Management</h2>
        <p class="text-muted">
            View and manage Knowledge Base supersedence relationships. These relationships help determine when newer KBs replace older ones for compliance checking.
        </p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body">
                <form asp-action="ProcessSupersedence" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary" onclick="return confirm('This will process supersedence data from all CVE records. Continue?')">
                        <i class="bi bi-arrow-repeat"></i> Process Supersedence Data
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to CVEs
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Supersedence Relationships (@Model.Count)</h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Original KB</th>
                                    <th>Superseding KB</th>
                                    <th>Product</th>
                                    <th>Product Family</th>
                                    <th>Date Added</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var supersedence in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-info">@supersedence.OriginalKb</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">@supersedence.SupersedingKb</span>
                                        </td>
                                        <td>@(supersedence.Product ?? "-")</td>
                                        <td>@(supersedence.ProductFamily ?? "-")</td>
                                        <td>@supersedence.DateAdded.ToString("yyyy-MM-dd HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-inbox display-4 text-muted"></i>
                        <p class="text-muted mt-2">No supersedence relationships found.</p>
                        <p class="text-muted">Import CVE data with supersedence information or click "Process Supersedence Data" to scan existing records.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>