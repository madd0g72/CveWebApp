@model CveWebApp.Models.CveUpdateStaging

@{
    ViewData["Title"] = "CVE Details";
}

<h1>CVE Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.ReleaseDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Product Family</dt>
        <dd class="col-sm-10">@Model.ProductFamily</dd>

        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product</dd>

        <dt class="col-sm-2">Platform</dt>
        <dd class="col-sm-10">@Model.Platform</dd>

        <dt class="col-sm-2">Impact</dt>
        <dd class="col-sm-10">@Model.Impact</dd>

        <dt class="col-sm-2">Max Severity</dt>
        <dd class="col-sm-10">@Model.MaxSeverity</dd>

        <dt class="col-sm-2">Article</dt>
        <dd class="col-sm-10">@Model.Article</dd>

        <dt class="col-sm-2">Article Link</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ArticleLink))
            {
                <a href="@Model.ArticleLink" target="_blank">@Model.ArticleLink</a>
            }
        </dd>

        <dt class="col-sm-2">Supercedence</dt>
        <dd class="col-sm-10">@Model.Supercedence</dd>

        <dt class="col-sm-2">Download</dt>
        <dd class="col-sm-10">@Model.Download</dd>

        <dt class="col-sm-2">Download Link</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.DownloadLink))
            {
                <a href="@Model.DownloadLink" target="_blank">@Model.DownloadLink</a>
            }
        </dd>

        <dt class="col-sm-2">Build Number</dt>
        <dd class="col-sm-10">@Model.BuildNumber</dd>

        <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model.Details</dd>

        <dt class="col-sm-2">Details Link</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.DetailsLink))
            {
                <a href="@Model.DetailsLink" target="_blank">@Model.DetailsLink</a>
            }
        </dd>

        <dt class="col-sm-2">Base Score</dt>
        <dd class="col-sm-10">@Model.BaseScore</dd>

        <dt class="col-sm-2">Temporal Score</dt>
        <dd class="col-sm-10">@Model.TemporalScore</dd>

        <dt class="col-sm-2">Customer Action Required</dt>
        <dd class="col-sm-10">@Model.CustomerActionRequired</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="ComplianceOverview" asp-route-id="@Model.Id" class="btn btn-primary ms-2">
        <i class="bi bi-shield-check"></i> View Compliance Overview
    </a>
</div>