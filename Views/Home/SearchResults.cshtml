@model List<CveWebApp.Models.CveUpdateStaging>

@{
    ViewData["Title"] = $"Search Results for {ViewBag.SearchedCveId}";
    var cveDetails = ViewBag.CveDetails;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">CVE Search Results</h1>
            
            <!-- CVE Summary Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i>
                        CVE: @ViewBag.SearchedCveId
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>Max Severity:</strong>
                            <span class="badge @(cveDetails.MaxSeverity == "Critical" ? "bg-danger" : 
                                              cveDetails.MaxSeverity == "High" ? "bg-warning" : 
                                              cveDetails.MaxSeverity == "Medium" ? "bg-info" : "bg-secondary")">
                                @cveDetails.MaxSeverity
                            </span>
                        </div>
                        <div class="col-md-3">
                            <strong>First Discovered:</strong>
                            @(cveDetails.FirstDiscovered?.ToString("yyyy-MM-dd") ?? "Unknown")
                        </div>
                        <div class="col-md-3">
                            <strong>Affected Products:</strong>
                            @cveDetails.TotalAffectedProducts
                        </div>
                        <div class="col-md-3">
                            <strong>Product Families:</strong>
                            @string.Join(", ", cveDetails.ProductFamilies)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Affected Products Table -->
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-list"></i>
                        Affected Products (@cveDetails.TotalAffectedProducts)
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Release Date</th>
                                        <th>Product Family</th>
                                        <th>Product</th>
                                        <th>Platform</th>
                                        <th>Max Severity</th>
                                        <th>Article</th>
                                        <th>Base Score</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ReleaseDate?.ToString("yyyy-MM-dd")</td>
                                            <td>@item.ProductFamily</td>
                                            <td>@item.Product</td>
                                            <td>@item.Platform</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.MaxSeverity))
                                                {
                                                    <span class="badge @(item.MaxSeverity == "Critical" ? "bg-danger" : 
                                                                      item.MaxSeverity == "High" ? "bg-warning" : 
                                                                      item.MaxSeverity == "Medium" ? "bg-info" : "bg-secondary")">
                                                        @item.MaxSeverity
                                                    </span>
                                                }
                                            </td>
                                            <td>@item.Article</td>
                                            <td>@item.BaseScore</td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-controller="Cve" asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i> Details
                                                    </a>
                                                    <a asp-controller="Cve" asp-action="ComplianceOverview" asp-route-id="@item.Id" 
                                                       class="btn btn-outline-success" title="View Compliance">
                                                        <i class="fas fa-shield-alt"></i> Compliance
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            No affected products found for this CVE.
                        </div>
                    }
                </div>
            </div>

            <!-- Navigation -->
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Search
                </a>
                <a asp-controller="Cve" asp-action="Index" class="btn btn-outline-primary ms-2">
                    <i class="fas fa-list"></i> Browse All CVE Records
                </a>
            </div>
        </div>
    </div>
</div>