@model CveWebApp.Models.UserRoleManagementViewModel

<div class="modal-header">
    <h5 class="modal-title">Manage Roles for @Model.Username</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="roleManagementForm">
    <div class="modal-body">
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <input type="hidden" name="Username" value="@Model.Username" />
        @Html.AntiForgeryToken()
        
        <div class="mb-3">
            <label class="form-label">Current Roles:</label>
            <div>
                @if (Model.CurrentRoles.Any())
                {
                    @foreach (var role in Model.CurrentRoles)
                    {
                        <span class="badge bg-@(role == "Admin" ? "danger" : role == "operator" ? "warning" : "primary") me-1">@role</span>
                    }
                }
                else
                {
                    <span class="text-muted">No roles assigned</span>
                }
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Select New Roles:</label>
            <div class="form-text mb-2">Hold Ctrl (Cmd on Mac) to select multiple roles</div>
            
            @foreach (var role in Model.AvailableRoles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role" 
                           id="role_@role" @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label" for="role_@role">
                        @role
                        @if (role == "Admin")
                        {
                            <small class="text-muted">(Full system access)</small>
                        }
                        else if (role == "operator")
                        {
                            <small class="text-muted">(Operational access)</small>
                        }
                        else if (role == "User")
                        {
                            <small class="text-muted">(Standard user access)</small>
                        }
                    </label>
                </div>
            }
        </div>

        @if (Model.Username == User.Identity?.Name)
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Warning:</strong> You are modifying your own account. Removing the Admin role will restrict your access.
            </div>
        }
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="updateUserRoles('@Model.UserId')">
            <i class="fas fa-save"></i> Update Roles
        </button>
    </div>
</form>