@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Password Reset Request</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-success">
                    <i class="bi bi-check-circle"></i>
                    <strong>Request submitted successfully!</strong>
                </div>
                
                @if (TempData["ResetToken"] != null && TempData["ResetEmail"] != null)
                {
                    @if (TempData["ProductionMode"] != null && TempData["ProductionMode"] is bool isProduction && isProduction)
                    {
                        <div class="alert alert-info">
                            <h6><i class="bi bi-info-circle"></i> Production Environment - Self-Service Reset</h6>
                            <p class="mb-2">Since email services are not configured, you can reset your password directly:</p>
                            <div class="border p-2 bg-light rounded">
                                <small class="text-muted">Click below to proceed with password reset:</small><br>
                                <a href="@Url.Action("ResetPassword", "Account", new { code = TempData["ResetToken"], email = TempData["ResetEmail"] })" 
                                   class="btn btn-primary mt-2">Reset Password Now</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h6><i class="bi bi-exclamation-triangle"></i> Development Mode - Email Not Configured</h6>
                            <p class="mb-2">Since email is not configured, use this reset link manually:</p>
                            <div class="border p-2 bg-light rounded">
                                <small class="text-muted">Reset Link:</small><br>
                                <a href="@Url.Action("ResetPassword", "Account", new { code = TempData["ResetToken"], email = TempData["ResetEmail"] })" 
                                   class="btn btn-sm btn-primary mt-2">Reset Password Now</a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>If an account with that email address exists, you will receive password reset instructions.</p>
                }
                
                <div class="text-center mt-4">
                    <a asp-action="Login" class="btn btn-outline-secondary">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>