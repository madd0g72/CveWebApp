@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Login to CVE Dashboard</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                    
                    <div class="text-center mt-3">
                        <a asp-action="ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                    </div>
                </form>
                
                @* Show credentials info based on environment *@
                @if (Context.RequestServices.GetRequiredService<IWebHostEnvironment>().IsDevelopment())
                {
                    <div class="mt-4 p-3 bg-light rounded">
                        <h6>Development Demo Credentials</h6>
                        <small class="text-muted">
                            <strong>Admin:</strong> admin@cveapp.local / admin123<br>
                            <strong>User:</strong> user@cveapp.local / user123
                        </small>
                    </div>
                }
                else
                {
                    <div class="mt-4 p-3 bg-warning bg-opacity-25 rounded">
                        <h6 class="text-warning">Production Environment</h6>
                        <small class="text-muted">
                            <strong>Default Admin:</strong> admin@company.local<br>
                            <em>Use "Forgot Password" to reset if needed</em>
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}