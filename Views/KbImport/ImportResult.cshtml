@model CveWebApp.Controllers.KbImportResult
@{
    ViewData["Title"] = "Import Results";
}

<h2>KB Import Results</h2>

@if (Model == null)
{
    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle"></i> Error</h4>
        <p>No import results available.</p>
    </div>
}
else if (Model.IsSuccessful)
{
    <div class="alert alert-success">
        <p>The KB data has been imported successfully.</p>
    </div>
}
else if (Model.HasErrors)
{
    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle"></i> Import Completed with Errors</h4>
        <p>Some issues were encountered during the import process.</p>
    </div>
}

@if (Model != null)
{
    <div class="row">
        @if (Model.HasErrors)
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0 text-danger">Errors Encountered</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <small>The following errors were encountered during processing:</small>
                        </div>
                        <div style="max-height: 300px; overflow-y: auto;">
                            @foreach (var error in Model.Errors)
                            {
                                <div class="alert alert-danger py-1 px-2 mb-1 small">
                                    @error
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <!-- Import Results Footer -->
    <div class="card mt-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fas fa-chart-bar"></i> Import Summary
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Import Details</h6>
                    <ul class="list-unstyled">
                        <li><strong>File:</strong> @Model.FileName</li>
                        <li><strong>Exit Code:</strong> 
                            @if (Model.ExitCode == 0)
                            {
                                <span class="badge bg-success">0 (Success)</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@Model.ExitCode (Error)</span>
                            }
                        </li>
                        @if (Model.ProcessingDuration.HasValue)
                        {
                            <li><strong>Processing Time:</strong> @Model.ProcessingDuration.Value.TotalSeconds.ToString("F1") seconds</li>
                        }
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6>Processing Results</h6>
                    <ul class="list-unstyled">
                        <li><strong>Lines Processed:</strong> @Model.LinesProcessed</li>
                        <li><strong>Servers Updated:</strong> <span class="text-info">@Model.ServersUpdated</span></li>
                        <li><strong>Records Added:</strong> <span class="text-success">@Model.RecordsAdded</span></li>
                        <li><strong>Records Removed:</strong> <span class="text-warning">@Model.RecordsRemoved</span></li>
                        <li><strong>Errors:</strong> <span class="text-danger">@Model.ErrorCount</span></li>
                    </ul>
                </div>
            </div>
            @if (Model.ImportStartTime.HasValue)
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <small class="text-muted">
                            Import started: @Model.ImportStartTime.Value.ToString("yyyy-MM-dd HH:mm:ss") UTC
                            @if (Model.ImportEndTime.HasValue)
                            {
                                <span> | Completed: @Model.ImportEndTime.Value.ToString("yyyy-MM-dd HH:mm:ss") UTC</span>
                            }
                        </small>
                    </div>
                </div>
            }
        </div>
    </div>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-upload"></i> Import Another File
    </a>
    <a asp-controller="Cve" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>