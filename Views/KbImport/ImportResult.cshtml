@model CveWebApp.Controllers.KbImportResult
@{
    ViewData["Title"] = "Import Results";
}

<h2>KB Import Results</h2>

@if (Model == null)
{
    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle"></i> Error</h4>
        <p>No import results available.</p>
    </div>
}
else if (Model.IsSuccessful)
{
    <div class="alert alert-success">
        <h4><i class="bi bi-check-circle"></i> Import Completed Successfully</h4>
        <p>The KB data has been imported successfully.</p>
    </div>
}
else if (Model.HasErrors)
{
    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle"></i> Import Completed with Errors</h4>
        <p>Some issues were encountered during the import process.</p>
    </div>
}

@if (Model != null)
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Import Summary</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <td><strong>Lines Processed:</strong></td>
                            <td>@Model.LinesProcessed</td>
                        </tr>
                        <tr>
                            <td><strong>Servers Updated:</strong></td>
                            <td>@Model.ServersUpdated</td>
                        </tr>
                        <tr>
                            <td><strong>Records Removed:</strong></td>
                            <td>@Model.RecordsRemoved</td>
                        </tr>
                        <tr>
                            <td><strong>Records Added:</strong></td>
                            <td>@Model.RecordsAdded</td>
                        </tr>
                        <tr>
                            <td><strong>Errors:</strong></td>
                            <td>
                                @if (Model.HasErrors)
                                {
                                    <span class="text-danger">@Model.Errors.Count</span>
                                }
                                else
                                {
                                    <span class="text-success">0</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        @if (Model.HasErrors)
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0 text-danger">Errors Encountered</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <small>The following errors were encountered during processing:</small>
                        </div>
                        <div style="max-height: 300px; overflow-y: auto;">
                            @foreach (var error in Model.Errors)
                            {
                                <div class="alert alert-danger py-1 px-2 mb-1 small">
                                    @error
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-upload"></i> Import Another File
    </a>
    <a asp-controller="Cve" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>