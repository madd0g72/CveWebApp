@{
    ViewData["Title"] = "KB Import";
}

<div class="row">
    <div class="col-md-8">
        <h2>Import Server Installed KBs</h2>
        <p class="text-muted">
            Upload a CSV file containing installed KBs for each server. This will replace existing KB records for the servers in the file.
        </p>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Upload CSV File</h5>
            </div>
            <div class="card-body">
                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="csvFile" class="form-label">Select CSV File</label>
                        <input type="file" class="form-control" id="csvFile" name="csvFile" accept=".csv" required>
                        <div class="form-text">
                            Maximum file size: 10MB. File must have a .csv extension.
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Upload and Import
                    </button>
                    <a asp-controller="Cve" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">CSV Format Requirements</h5>
            </div>
            <div class="card-body">
                <p><strong>Required Headers:</strong></p>
                <ul>
                    <li><code>Computer</code> - Server name</li>
                    <li><code>OSProduct</code> - Operating system</li>
                    <li><code>InstalledKBs</code> - Comma-separated KB numbers</li>
                </ul>
                
                <p><strong>Example:</strong></p>
                <pre class="bg-light p-2 small">Computer,OSProduct,InstalledKBs
SERVER01,Windows Server 2019,"925673,5005112,5007206"
SERVER02,Windows Server 2022,"925673,5008123"</pre>

                <p class="text-muted small">
                    <strong>Note:</strong> All existing KB records for servers listed in the CSV will be replaced with the new data.
                </p>
            </div>
        </div>
    </div>
</div>