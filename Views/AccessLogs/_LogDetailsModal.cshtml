@model CveWebApp.Models.LoginAttempt

<div class="modal-header">
    <h5 class="modal-title">Login Attempt Details</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Timestamp:</dt>
                <dd class="col-sm-8">@Model.Timestamp.ToString("yyyy-MM-dd HH:mm:ss") UTC</dd>

                <dt class="col-sm-4">Username:</dt>
                <dd class="col-sm-8">@Model.Username</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@(Model.Email ?? "N/A")</dd>

                <dt class="col-sm-4">Source IP:</dt>
                <dd class="col-sm-8"><code>@Model.SourceIP</code></dd>
            </dl>
        </div>
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Result:</dt>
                <dd class="col-sm-8">
                    @if (Model.IsSuccess)
                    {
                        <span class="badge bg-success">
                            <i class="fas fa-check"></i> Success
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger">
                            <i class="fas fa-times"></i> Failed
                        </span>
                    }
                </dd>

                @if (!string.IsNullOrEmpty(Model.FailureReason))
                {
                    <dt class="col-sm-4">Failure Reason:</dt>
                    <dd class="col-sm-8">
                        <span class="text-danger">@Model.FailureReason</span>
                    </dd>
                }

                <dt class="col-sm-4">ID:</dt>
                <dd class="col-sm-8"><code>@Model.Id</code></dd>
            </dl>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.UserAgent))
    {
        <hr />
        <div class="row">
            <div class="col-12">
                <dt>User Agent:</dt>
                <dd>
                    <small class="text-muted font-monospace">@Model.UserAgent</small>
                </dd>
            </div>
        </div>
    }
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>